{
    "include": ["src/**/*"],
    "compilerOptions": {
        "outDir": "dist",
        "declarationDir": "dist",
        "module": "ES2020",
        "target": "ES2020",
        "moduleResolution": "Node",
        "sourceMap": true,
        "esModuleInterop": true,
        "allowJs": true,
        "declaration": true,
        "experimentalDecorators": true,
        "skipLibCheck": false,
    }
}